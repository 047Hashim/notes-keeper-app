<% layout('layouts/boilerplate') -%>
<div class="container mt-4">
  <h3 class="mb-3">✏️ Edit Note</h3>
  <form
    action="/notes/<%= note._id %>?_method=PUT"
    method="POST"
    novalidate
    class="needs-validation"
  >
    <div class="mb-3">
      <label for="title" class="form-label">Note Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="note[title]"
        value="<%= note.title %>"
        required
      />
      <div class="invalid-feedback">Title is required.</div>
    </div>
    <div class="mb-3">
      <label for="content" class="form-label">Note Content</label>
      <textarea
        class="form-control"
        id="content"
        name="note[content]"
        rows="4"
        required
      >
<%= note.content %></textarea
      >
      <div class="invalid-feedback">Please enter content for the note.</div>
    </div>
    <button type="submit" class="btn btn-warning">Update Note</button>
  </form>
</div>
