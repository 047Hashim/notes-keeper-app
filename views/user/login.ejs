<% layout('layouts/boilerplate') -%>
<div class="container mt-5" style="max-width: 500px">
  <h2 class="text-center mb-4">&#128273; Login to Notes Keeper</h2>
  <form action="/login" method="POST" novalidate class="needs-validation">
    <% if (navbarSource) { %>
    <input type="hidden" name="source" value="navbar" />
    <% } %>
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        placeholder="Enter your email"
        required
      />
      <div class="invalid-feedback">Please enter your email.</div>
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Enter your password"
        required
      />
      <div class="invalid-feedback">Please enter your password.</div>
    </div>

    <div class="d-grid">
      <button type="submit" class="btn btn-primary primary-btn">Login</button>
    </div>

    <p class="mt-3 text-center link-color">
      Don't have an account?
      <a href="/signup">Sign up here</a>
    </p>
  </form>
</div>
